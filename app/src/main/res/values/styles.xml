<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
    </style>

    <style name="EditText" parent="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/large_text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:lineSpacingExtra">@dimen/small_text_size</item>
    </style>

    <style name="EditText.Large">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Button" parent="Text">
        <item name="android:textColor">@color/colorContrast</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="Button.Wide.Green">
        <item name="android:background">@color/buttonOk</item>
    </style>

    <style name="Button.Link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@color/fui_transparent</item>
    </style>

    <style name="Button.Link.Small">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="GroupTitle" parent="Text">
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Label" parent="Text">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

</resources>
