<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.stfalcon.chatkit.dialogs.DialogsList
        android:id="@+id/dialogsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dialogDividerLeftPadding="0dp"
        app:dialogAvatarHeight="@dimen/dialog_avatar_height"
        app:dialogAvatarWidth="@dimen/dialog_avatar_width"
        app:dialogDateColor="@color/dialogDate"
        app:dialogDateSize="@dimen/small_text_size"
        app:dialogMessageTextColor="@color/colorLight"
        app:dialogMessageTextSize="@dimen/small_text_size"
        app:dialogTitleTextColor="@color/colorPrimary"
        app:dialogTitleTextSize="@dimen/large_text_size"
        app:dialogTitleTextStyle="bold"
        app:dialogUnreadBubbleTextColor="@color/colorContrast"
        app:dialogUnreadBubbleBackgroundColor="@color/unreadMessages"
        app:dialogUnreadBubbleTextSize="@dimen/extra_small_text_size"
        app:dialogUnreadItemBackground="@color/transparent"
        app:dialogUnreadTitleTextStyle="bold"
        />

</RelativeLayout>
